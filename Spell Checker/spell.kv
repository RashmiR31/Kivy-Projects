#: import utils kivy.utils
<mylayout>
    BoxLayout:
        orientation: 'vertical'
        size: root.width,root.height

        Label:
            id: word_label
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            text: 'Enter a word'
            font_size: 32
            background_color: utils.get_color_from_hex('#110761')


        TextInput:
            id: word_input
            multiline: False
            size_hint: (1,.5)
            font_size: 55


        Button:
            size_hint: (1,.5)
            font_size: 32
            text: 'Submit'
            on_press: root.press()
            background_normal: ''
            background_color: utils.get_color_from_hex('#110761')

    